}

<div id="layoutSidenav">

	<div id="layoutSidenav_content">
		<main>
			<div class="container-fluid px-4">
				<div class="card mb-4">
					<div class="card-header">

						<a class="btn bg-success text-white">
							<svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-journal-plus" viewBox="0 0 16 16">
								<path fill-rule="evenodd" d="M8 5.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V10a.5.5 0 0 1-1 0V8.5H6a.5.5 0 0 1 0-1h1.5V6a.5.5 0 0 1 .5-.5" />
								<path d="M3 0h10a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-1h1v1a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v1H1V2a2 2 0 0 1 2-2" />
								<path d="M1 5v-.5a.5.5 0 0 1 1 0V5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0V8h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1zm0 3v-.5a.5.5 0 0 1 1 0v.5h.5a.5.5 0 0 1 0 1h-2a.5.5 0 0 1 0-1z" />
							</svg>
							Adicionar novo evento

						</a>
					</div>
					<div class="card-body">

						<!-- Table -->
						<table id="datatablesSimple">

							<!-- Table Head-->
							<thead>
								<tr>
									<th>Título</th>
									<th>Descrição</th>
									<th>Data</th>
									<th>Ações</th>
								</tr>
							</thead>

							<!-- Table Foot-->
							<tfoot>
								<tr>
									<th>Título</th>
									<th>Descrição</th>
									<th>Data</th>
									<th>Ações</th>
								</tr>
							</tfoot>

							<!-- Table Body-->
							<tbody>
								<tr>
									<td>Tiger Nixon</td>
									<td>System Architect</td>
									<td>Edinburgh</td>
									<td>
										<a class="btn bg-primary text-white">Editar</a>
										<a class="btn bg-danger text-white">Deletar</a>
									</td>
								</tr>
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</main>



	</div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
<script src="~/TemplateAssets/js/scripts.js"></script>
<script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
<script src="~/TemplateAssets/js/datatables-simple-demo.js"></script>


<script>
	document.addEventListener('DOMContentLoaded', function () {
		const dataTable = new simpleDatatables.DataTable("#datatablesSimple", {
			labels: {
				placeholder: "Buscar...",
				perPage: "resultados por página",
				noRows: "Nenhum resultado encontrado",
				info: "Mostrando {start} a {end} de {rows} resultados"
			}
		});
	});
</script>